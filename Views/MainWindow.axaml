<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:DesktopIconsOrganizer.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="DesktopIconsOrganizer.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="DesktopIconsOrganizer">

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <StackPanel>
        <TextBlock Text="{Binding HeaderText}" 
                 HorizontalAlignment="Center" 
                 VerticalAlignment="Top" Margin="20"
                 FontSize="24"
                 FontWeight="DemiBold"></TextBlock>
        <WrapPanel Margin="40" FlowDirection="LeftToRight"> 
            <Label>Organize by</Label>
          <ComboBox Name="organizeBy" Margin="10, 0, 10, 0" SelectedIndex="0" MaxDropDownHeight="100"
                     ItemsSource="{Binding OrganizeTypeOptions}" DisplayMemberBinding="{Binding DisplayName}" AutoScrollToSelectedItem="True"> 
          </ComboBox>
        </WrapPanel>
		<Button Name="organizeButton" Click="OrganizeButton_OnClick" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="20">Organize</Button>
    </StackPanel>

</Window>
